<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Dashboard">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        app:cardCornerRadius="20dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/user"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/user"
                                android:layout_centerInParent="true">
                            </ImageView>

                            <TextView
                                android:id="@+id/txtuser"
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/user"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="10dp"
                                android:text="User"
                                android:textColor="#2D0671"
                                android:textSize="16sp"
                                android:textStyle="bold">

                            </TextView>

                            <Button
                                android:id="@+id/userbtn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:onClick="userbtn">

                            </Button>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        app:cardCornerRadius="20dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/product"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/product"
                                android:layout_centerInParent="true">
                            </ImageView>

                            <TextView
                                android:id="@+id/txtproduct"
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/product"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="10dp"
                                android:text="Product"
                                android:textColor="#2D0671"
                                android:textSize="16sp"
                                android:textStyle="bold">

                            </TextView>

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/productbtn"
                                android:background="@android:color/transparent"
                                android:onClick="productbtn">

                            </Button>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        app:cardCornerRadius="20dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/order"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/purchase"
                                android:layout_centerInParent="true">
                            </ImageView>

                            <TextView
                                android:id="@+id/txtorder"
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/order"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="10dp"
                                android:text="Order"
                                android:textColor="#2D0671"
                                android:textSize="16sp"
                                android:textStyle="bold">

                            </TextView>

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/purchasebtn"
                                android:background="@android:color/transparent"
                                android:onClick="orderbtn">

                            </Button>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        app:cardCornerRadius="20dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/payment"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/payment"
                                android:layout_centerInParent="true">
                            </ImageView>

                            <TextView
                                android:id="@+id/txtpayment"
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/payment"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="10dp"
                                android:text="Payment"
                                android:textColor="#2D0671"
                                android:textSize="16sp"
                                android:textStyle="bold">

                            </TextView>

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/paymentbtn"
                                android:background="@android:color/transparent"
                                android:onClick="paymentbtn">

                            </Button>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        app:cardCornerRadius="20dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/shipment"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/shipment"
                                android:layout_centerInParent="true">
                            </ImageView>

                            <TextView
                                android:id="@+id/txtshipment"
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/shipment"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="10dp"
                                android:text="Shipment"
                                android:textColor="#2D0671"
                                android:textSize="16sp"
                                android:textStyle="bold">

                            </TextView>

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/shipmentbtn"
                                android:background="@android:color/transparent"
                                android:onClick="shipmentbtn">

                            </Button>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>



                </LinearLayout>

                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="#00574B"
                    android:onClick="logout"
                    android:text="Logout"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/invoice" />


            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>